---
// Import the component and all the images you want to use with it
import CSPicture from "@components/TemplateComponents/CSPicture.astro";
import defaultMobileImage from "@assets/images/CTA/chi-bridge-m.webp";
import defaultTabletImage from "@assets/images/CTA/chi-bridge-t.webp";
import defaultDesktopImage from "@assets/images/CTA/chi-bridge-d.webp";
import defaultFallbackImage from "@assets/images/CTA/chi-bridge-t.webp";

const {
  mobileImgUrl = defaultMobileImage,
  mobileMediaWidth = "600px",
  tabletImgUrl = defaultTabletImage,
  tabletpMediaWidth = "601px",
  desktopImgUrl = defaultDesktopImage,
  desktopMediaWidth = "1281px",
  fallbackImgUrl = defaultFallbackImage,
  alt = "Default alt text",
  title = "Default Title",
  description = "Default Description",
  buttonText = "Default Button Text",
  buttonLink = "/default-link",
} = Astro.props;
---

<section id="cta" class="cta">
  <div class="cta__container">
    <h2 class="cta__title">{title}</h2>
    <p>{description}</p>
    <a href={buttonLink} class="cs-button cs-button-solid">{buttonText}</a>
  </div>
  <CSPicture
    mobileImgUrl={mobileImgUrl}
    mobileMediaWidth={mobileMediaWidth}
    tabletImgUrl={tabletImgUrl}
    desktopImgUrl={desktopImgUrl}
    desktopMediaWidth={desktopMediaWidth}
    fallbackImgUrl={fallbackImgUrl}
    alt={alt}
  />
</section>

<style lang="scss" is:global>
  /* Mobile */
  @media only screen and (min-width: 0em) {
    picture {
      width: 100%;
    }
    .cta {
      padding: 3.125rem 0; // Converted from (50/16rem)
      position: relative;

      &:before {
        content: "";
        width: 100%;
        height: 100%;
        background: #000;
        opacity: 0.7;
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        z-index: -1;
      }

      .cta__container {
        text-align: center;
      }

      .cta__title {
        font-size: min(9vw, 3rem);
        font-weight: 900;
        line-height: 1.20833; // Converted from 58/48
        text-align: center;
        margin-bottom: 2.25rem; // Converted from (36/16rem)
        color: #fff;
        position: relative;
      }

      p {
        text-align: center;
        width: 96%;
        max-width: 37.375rem; // Converted from (598/16rem)
        margin: auto;
        margin-bottom: 2.25rem; // Converted from (36/16rem)
        color: #fff;
        opacity: 1;
      }
    }
  }

  /* Small Desktop */
  @media only screen and (min-width: 64em) {
    #cta {
      padding: 10.5rem 0;
    }
  }

  /* Large Desktop */
  @media only screen and (min-width: 1300px) {
    .cta picture {
      width: 100%;
    }
    #cta {
      position: relative;

      &:before {
        display: none;
      }

      // &:after {
      //   content: "";
      //   width: 125rem;
      //   height: 69.25rem;
      //   background: url("/assets/svgs/cta-squares.svg");
      //   background-position: center;
      //   background-size: contain;
      //   background-repeat: no-repeat;
      //   opacity: 1;
      //   display: block;
      //   position: absolute;
      //   bottom: 0;
      //   left: 50%;
      //   z-index: -3;
      //   transform: translateX(-50%);
      // }

      .cta__container {
        width: 100%;
        margin: auto;
      }
    }
  }

  /* Dark Mode */
  @media only screen and (min-width: 0em) {
    body.dark-mode {
      #cta {
        &:after {
          display: none;
        }
      }
    }
  }
</style>
