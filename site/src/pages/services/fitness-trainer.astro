---
import BaseLayout from "src/layouts/BaseLayout.astro";
import CTA from "@components/CTA.astro";

interface Props {
  title: string;
  details: string;
}

const { title, details } = Astro.props as Props;
---

<BaseLayout>
  <section class="serviceAboutSection">
    <div class="container">
      <div class="serviceAboutSection__row">
        <div class="aboutContent">
          <h1>
            Hand-Crafted Websites <span class="abMark"
              >Built for Performance</span
            > and
            <span class="abMark">Growth</span>.
          </h1>
          <article class="service-section">
            <p>
              Westtown Websites, believes your website should do more than just
              exist—it should work for you, driving growth and setting your
              business apart.
            </p>

            <p>
              With over 15 years of experience, including work with brands like
              Hanes, L'Oréal, and Nordstrom, we’ve developed a process that
              ensures every site we create is not only beautiful but also
              performs at the highest level.
            </p>
          </article>
        </div>
      </div>
    </div>
  </section>

  <section class="masonry-layout">
    <div class="masonry-layout__grid">
      <article class="masonry-layout__card masonry-layout__card--1">
        <header>
          <h2 class="masonry-layout__card-title">
            Key Features for Fitness Trainers
          </h2>
        </header>
        <p class="masonry-layout__card-description"></p>
      </article>
      <article class="masonry-layout__card masonry-layout__card--2">
        <header>
          <h3 class="masonry-layout__card-title">
            Client Management Dashboard
          </h3>
        </header>
        <p class="masonry-layout__card-description">
          Track client progress, manage workout plans, and keep everything in
          one place with our secure dashboard.
        </p>
      </article>
      <article class="masonry-layout__card masonry-layout__card--3">
        <header>
          <h3 class="masonry-layout__card-title">Custom Workout Builder</h3>
        </header>
        <p class="masonry-layout__card-description">
          Create personalized workout routines for clients, complete with video
          tutorials and product recommendations.
        </p>
      </article>
      <article class="masonry-layout__card masonry-layout__card--4">
        <header>
          <h3 class="masonry-layout__card-title">Affiliate Marketing Tools</h3>
        </header>
        <p class="masonry-layout__card-description">
          Earn commissions by recommending fitness gear, supplements, and
          equipment through affiliate links.
        </p>
      </article>
      <article class="masonry-layout__card masonry-layout__card--5">
        <header>
          <h3 class="masonry-layout__card-title">
            Online Booking & Scheduling
          </h3>
        </header>
        <p class="masonry-layout__card-description">
          Clients can book sessions and classes directly, with automated
          reminders to keep them on track.
        </p>
      </article>
      <article class="masonry-layout__card masonry-layout__card--6">
        <header>
          <h3 class="masonry-layout__card-title">
            Email Marketing Integration
          </h3>
        </header>
        <p class="masonry-layout__card-description">
          Send fitness tips, product recommendations, and training updates
          directly to your clients' inboxes.
        </p>
      </article>
    </div>
  </section>

  <section class="custom-design">
    <article>
      <h3 class="custom-design__subheading">
        Grow Your Income with Affiliate Marketing
      </h3>
      <p class="custom-design__offer-description">
        Our platform allows you to monetize your expertise by recommending the
        best fitness gear, supplements, and equipment. Earn commissions on every
        sale with integrated affiliate marketing tools.
      </p>
      <p class="custom-design__offer-description">
        Our platform is built with SEO in mind, ensuring your website attracts
        more clients organically. With tools to optimize your blog posts,
        landing pages, and local SEO, you’ll get noticed in search results and
        grow your business faster.
      </p>
    </article>

    <aside>
      <h4 class="custom-design__offer-title">What’s included:</h4>
      <ul class="custom-design__offer-list">
        <li class="custom-design__offer-item">
          Embed affiliate links in workout plans, blog posts, and videos.
        </li>
        <li class="custom-design__offer-item">On-Page SEO</li>
        <li class="custom-design__offer-item">
          Create a curated online store featuring your favorite fitness
          products.
        </li>
        <li class="custom-design__offer-item">
          Offer product recommendations within video tutorials and workout
          instructions.
        </li>

        <li class="custom-design__offer-item">
          Create fitness blogs optimized with targeted keywords.
        </li>

        <li class="custom-design__offer-item">
          Develop SEO-friendly landing pages for your services.
        </li>

        <li class="custom-design__offer-item">
          Increase visibility with local SEO optimization for your
          location-based services.
        </li>
      </ul>
    </aside>
  </section>

  <section class="pricing">
    <div class="container">
      <h2>Flexible Pricing Packages for Fitness Trainers</h2>
      <div class="pricing-table">
        <div class="pricing-option">
          <h3>Basic Package</h3>
          <p>Client management, workout builder, SEO optimization</p>
          <span class="price">$100/month</span>
        </div>
        <div class="pricing-option">
          <h3>Premium Package</h3>
          <p>
            Everything in Basic, plus affiliate marketing tools and email
            integration
          </p>
          <span class="price">$200/month</span>
        </div>
        <div class="pricing-option">
          <h3>Pro Package</h3>
          <p>
            Everything in Premium, plus full SEO tools, video hosting, and
            product store setup
          </p>
          <span class="price">$350/month</span>
        </div>
      </div>
    </div>
  </section>

  <section class="contact" id="contact">
    <div class="container">
      <h2>Ready to Build a Stronger Fitness Business?</h2>
      <form action="/submit" method="post">
        <label for="name">Your Name:</label>
        <input type="text" id="name" name="name" required />

        <label for="email">Your Email:</label>
        <input type="email" id="email" name="email" required />

        <label for="package">Choose Your Package:</label>
        <select id="package" name="package" required>
          <option value="basic">Basic Package</option>
          <option value="premium">Premium Package</option>
          <option value="pro">Pro Package</option>
        </select>

        <button type="submit" class="cta-button">Start Now</button>
      </form>
    </div>
  </section>
  <CTA
    title="Ready to Grow Your Online Presence?"
    description={`Contact us today to
  schedule a consultation and start building a custom website that sets your business apart.`}
    buttonText="Click here to get in touch"
    buttonLink="/contact"
  />
</BaseLayout>

<style lang="scss">
  .serviceAboutSection {
    padding: 52px 0 172px;
    overflow-x: hidden;

    &:hover img {
      filter: none;
    }

    @media screen and (min-width: 62rem) {
      padding-bottom: 0;
    }
  }

  .container {
    width: 100%;

    margin-right: auto;
    margin-left: auto;

    @media (min-width: 576px) {
    }

    @media (min-width: 768px) {
    }

    @media (min-width: 62rem) {
      overflow: hidden;
    }

    @media (min-width: 1200px) {
    }

    @media (min-width: 1400px) {
    }
  }

  .serviceAboutSection__row {
    --bs-gutter-x: 1.5rem;
    --bs-gutter-y: 0;
    display: flex;
    flex-wrap: wrap;
    margin-top: 0;

    width: 100%;

    @media screen and (min-width: 62rem) {
      margin-top: calc(-1 * var(--bs-gutter-y));
      margin-right: calc(-0.5 * var(--bs-gutter-x));
      margin-left: calc(-0.5 * var(--bs-gutter-x));
    }
  }

  .serviceAboutSection__col {
    flex: 0 0 auto;
    width: 100%;

    @media (min-width: 62rem) {
      width: 50%;
    }
  }

  .serviceAbout01Thumb {
    max-width: 100%;
    width: 100%;
    height: auto;

    img {
      position: relative;
      filter: grayscale(1) brightness(0.5);
      max-width: 100%;
      transition: all ease 0.5s;

      // &:hover {
      //   filter: none;
      // }
    }

    @media screen and (min-width: 62rem) {
      img {
        position: absolute;
      }
    }
  }

  .aboutContent {
    padding: var(--sectionPadding);
    max-width: 920px;
    margin: 0 auto;

    @media screen and (min-width: 62rem) {
      padding-top: 4rem;
    }
  }

  .aboutContentColR {
    padding-right: calc(var(--bs-gutter-x) * 0.5);
    padding-left: calc(var(--bs-gutter-x) * 0.5);
    margin-top: var(--bs-gutter-y);
    background: var(--secondary);
    z-index: 2;
    position: relative;
    flex-shrink: 0;
    width: 100%;
    max-width: 100%;
    height: 100%;

    &::after {
      content: "";
      position: absolute;
      top: 0;
      left: 50%;
      width: 100%;
      height: 100%;
      background: var(--secondary);
      z-index: -1;
    }

    @media (min-width: 992px) {
      width: 50%;
    }
  }

  .aboutContent h1 {
    font-size: 2.5rem;
    line-height: 3rem;
    font-weight: 700;
    letter-spacing: -0.6px;
    text-transform: uppercase;
    z-index: 5;
    position: relative;
    margin-bottom: 2rem;

    .abMark {
      color: var(--accent-coral);
    }

    @media (min-width: 62rem) {
      font-size: 3.125rem;
      line-height: 3.5rem;
    }
  }

  .abMark {
    color: var(--primary-color);
  }

  .service-section {
    p {
      color: var(--bodyTextColor);
      font-size: 1.2rem;
      margin-bottom: 1rem;
    }

    @media (min-width: 62rem) {
      p {
        font-size: 1.2rem;
      }
    }
  }
</style>

