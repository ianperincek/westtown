---
import BaseLayout from "src/layouts/BaseLayout.astro";
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <h1>Empower Your Wellness Journey with Personalized Coaching</h1>
      <p>
        Achieve your health and fitness goals with tailored coaching and
        exclusive resources.
      </p>
      <a href="#contact" class="cta-button">Get Started Today</a>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="why-choose-us">
    <div class="container">
      <h2>Why Choose Our Wellness Coaching?</h2>
      <p>
        Whether you're aiming to lose weight, build strength, or improve your
        mental health, our personalized coaching services offer everything you
        need to stay on track. From custom workout plans to nutrition advice, we
        help you reach your goals with expert guidance.
      </p>
    </div>
  </section>

  <!-- Key Features Section -->
  <section class="features">
    <div class="container">
      <h2>Our Coaching Services Include</h2>
      <div class="features-grid">
        <div class="feature-card">
          <h3>Personalized Coaching</h3>
          <p>
            1-on-1 coaching sessions tailored to your specific goals and
            lifestyle.
          </p>
        </div>
        <div class="feature-card">
          <h3>Progress Tracking</h3>
          <p>
            Track your progress and stay motivated with our secure client
            portal.
          </p>
        </div>
        <div class="feature-card">
          <h3>Custom Meal & Workout Plans</h3>
          <p>
            Get personalized meal and workout plans that suit your dietary
            preferences and fitness level.
          </p>
        </div>
        <div class="feature-card">
          <h3>Access to Workshops & Courses</h3>
          <p>
            Join our online courses and live workshops to dive deeper into
            health and wellness topics.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing Section -->
  <section class="pricing">
    <div class="container">
      <h2>Flexible Coaching Plans for Every Journey</h2>
      <div class="pricing-table">
        <div class="pricing-option">
          <h3>Basic Plan</h3>
          <p>1-on-1 sessions, basic progress tracking</p>
          <span class="price">$50/session</span>
        </div>
        <div class="pricing-option">
          <h3>Premium Plan</h3>
          <p>Monthly coaching, custom meal & workout plans</p>
          <span class="price">$175/month</span>
        </div>
        <div class="pricing-option">
          <h3>VIP Plan</h3>
          <p>Unlimited sessions, workshops, personalized support</p>
          <span class="price">$300/month</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="testimonials">
    <div class="container">
      <h2>What Our Clients Are Saying</h2>
      <div class="testimonials-grid">
        <div class="testimonial">
          <p>
            "Thanks to the personalized coaching, I’ve lost 20 pounds and feel
            stronger than ever!" — Jessica T.
          </p>
        </div>
        <div class="testimonial">
          <p>
            "The online workshops and meal plans have transformed my approach to
            health. Highly recommend!" — Mark D.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="contact" id="contact">
    <div class="container">
      <h2>Start Your Wellness Journey Today</h2>
      <form action="/submit" method="post">
        <label for="name">Your Name:</label>
        <input type="text" id="name" name="name" required />

        <label for="email">Your Email:</label>
        <input type="email" id="email" name="email" required />

        <label for="plan">Choose Your Plan:</label>
        <select id="plan" name="plan" required>
          <option value="basic">Basic Plan</option>
          <option value="premium">Premium Plan</option>
          <option value="vip">VIP Plan</option>
        </select>

        <button type="submit" class="cta-button">Get Started</button>
      </form>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    background: url("/path-to-hero-image.jpg") no-repeat center center;
    background-size: cover;
    padding: 100px 0;
    text-align: center;
    color: white;

    h1 {
      font-size: 3rem;
      margin-bottom: 20px;
    }

    p {
      font-size: 1.5rem;
      margin-bottom: 40px;
    }

    .cta-button {
      background-color: #ff5733;
      color: white;
      padding: 10px 30px;
      text-decoration: none;
      font-size: 1.2rem;
      border-radius: 5px;
    }
  }
</style>
