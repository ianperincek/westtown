---
const links = [
  { name: "Home", url: "/" },

  {
    name: "Services",
    url: null, // No link for the title
    subLinks: [
      { name: "Custom Web Design", url: "/services/custom-web-design" },
      {
        name: "SEO & Performance Optimization",
        url: "/services/search-engine-performance-optimization",
      },
      {
        name: "Accessibility Compliance",
        url: "/services/accessibility-compliance",
      },
      {
        name: "Website Maintenance and Management",
        url: "/services/website-management-maintenance",
      },
    ],
  },
  { name: "Blog", url: "/blog" },
  { name: "Contact", url: "/contact" },
];
---

<nav class="full-screen-nav">
  <div class="nav-wrapper">
    <button class="close-nav">X</button>

    <ul>
      {
        links.map((link) => (
          <li>
            {link.url ? (
              <a href={link.url}>{link.name}</a>
            ) : (
              <span class="nav-name">{link.name}</span>
            )}
            {link.subLinks && (
              <ul class="sub-links">
                {link.subLinks.map((subLink) => (
                  <li>
                    <a href={subLink.url}>{subLink.name}</a>
                  </li>
                ))}
              </ul>
            )}
          </li>
        ))
      }
    </ul>
  </div>
</nav>

<style lang="scss">
  .full-screen-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.9);
    display: flex;
    align-items: center;
    justify-content: left;
    transform: translatex(-100%);
    transition: transform 0.5s ease-in-out;
    z-index: 1000;

    @media (min-width: 48rem) {
      padding-left: 10%;
    }

    .nav-wrapper {
      text-align: center;
      border-top: 2px solid var(--primaryLight);
      border-bottom: 2px solid var(--primaryLight);
      padding-left: 1rem;
    }

    .nav-name {
      font-size: clamp(1rem, 5vw, 2rem);
      color: var(--bodyTextColorWhite);
      font-weight: bold;
      margin-bottom: 1rem;
      display: block;
    }

    .nav-title {
      transform: translateY(-50px);
      color: #fff;
      font-size: 2rem;
    }

    .sub-links {
      padding-left: 2rem;
      margin-top: 2rem;
      border-top: 1px solid var(--primaryLight);
      border-bottom: 1px solid var(--primaryLight);
      padding-top: 2rem;
      padding-bottom: 2rem;

      li {
        margin: 0.5rem 0;
      }

      li a {
        font-size: smaller;
      }
    }

    ul {
      list-style: none;
      padding: 0;

      li {
        margin: 1.5rem 0;
        text-align: left;

        a {
          color: white;
          font-size: clamp(1rem, 5vw, 2rem);
          text-decoration: none;
          font-weight: 600;
          transition: color 0.3s ease-in-out;

          &:hover {
            color: var(--accent-coral);
          }
        }
      }
    }

    .close-nav {
      position: absolute;
      top: 2rem;
      right: 2rem;
      font-size: 2rem;
      background: none;
      border: none;
      color: white;
      cursor: pointer;
      transition: color 0.3s ease-in-out;

      &:hover {
        color: var(--accent-coral);
      }
    }
  }

  .open-nav {
    transform: translatex(0);
  }
</style>
