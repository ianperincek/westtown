---
import client from "@data/client.json";
import { getCurrentYear } from "@libs/utils";

const currentYear = getCurrentYear();
---

<!-- ============================================ --><!--                   Footer                     --><!-- ============================================ -->
<footer id="footer" class="footer">
  <div class="container">
    <div class="left-section">
      <a class="logo" href="/"
        ><img
          loading="lazy"
          decoding="async"
          src="/assets/svgs/logoagain2W.svg"
          alt="logo"
          width="264"
          height="78"
        /></a
      >
    </div>
    <div class="right-section">
      <div class="lists">
        <ul>
          <li>
            <h2>Information</h2>
          </li>
          <li>
            <a href="/">Home</a>
          </li>
          <!-- <li>
            <a href="/about">About Us</a>
          </li>
          <li>
            <a href="/projects">Projects</a>
          </li> -->

          <li>
            <a href="/contact">Contact</a>
          </li>

          <li>
            <a href="/blog">Blog</a>
          </li>
        </ul>
        <ul>
          <li>
            <h2>Services</h2>
          </li>

          <li><a href="/services/custom-web-design">Custom Web Design</a></li>
          <li>
            <a href="/services/accessibility-compliance"
              >Accessibility and Legal Compliance</a
            >
          </li>

          <li>
            <a href="/services/search-engine-performance-optimization"
              >Search Engine Performance Opimization</a
            >
          </li>
          <li>
            <a href="/services/website-management-maintenance"
              >Website Management and Maintenance</a
            >
          </li>
          <li><a href="/services/chicago-web-design">Chicago Web Design</a></li>
        </ul>
        <ul>
          <li>
            <h2>Contact</h2>
          </li>
          <li>
            <a href="/contact">
              {client.address.city}
              {client.address.state}
              {client.address.zip}
            </a>
          </li>
          <li>
            <a href={`tel:${client.phoneForTel}`}>
              T:
              {client.phoneFormatted}
            </a>
          </li>
          <li>
            <a href={`mailto:${client.email}`}>Click to Email</a>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="credit">
    <span>Designed and Hand Coded by</span>
    <a href="/" target="_blank" rel="noopener">West Town Websites</a>
    <span class="copyright"> Copyright {currentYear} - Present</span>
  </div>
</footer>

<style lang="scss">
  /* Mobile */
  @media only screen and (min-width: 0em) {
    .footer {
      font-size: min(4vw, 1.2em);
      padding: 5.25rem 0 1.25rem;
      background: #1c1c1c;
      position: relative;
      z-index: 6;

      .left-section {
        text-align: center;
        margin: auto;
        margin-bottom: 3.125rem;

        .logo {
          text-align: center;
          width: auto;
          height: 2em;
          margin: auto;
          margin-bottom: 1.875em;
          display: inline-block;

          img {
            width: auto;
            height: 100%;
            display: block;
          }
        }

        p {
          font-size: 0.875rem;
          line-height: 1.92857;
          text-align: center;
          width: 100%;
          width: 21.92857rem;
          margin: auto;
          color: #fff;
          opacity: 0.9;
        }
      }

      .right-section {
        width: 96%;
        max-width: 25.4375rem;
        margin: auto;

        .lists {
          width: 96%;
          max-width: 19.1875rem;
          margin: auto;
          display: flex;
          justify-content: space-between;
          flex-wrap: wrap;

          ul {
            margin-top: 0;
            margin-bottom: 2rem;
            padding: 0;

            li {
              font-size: 1.125rem;
              list-style: none;
              margin-bottom: 0.75rem;
              color: #fff;
              opacity: 0.9;

              a {
                line-height: 1.16667em;
                text-decoration: none;
                color: #fff;
                transition: color 0.3s;

                &:hover {
                  color: var(--accent-blue);
                }
              }
            }

            h2 {
              font-size: 1.125rem;
              font-weight: bold;
              line-height: 1.16667em;
              text-transform: uppercase;
              margin-bottom: 2.3125rem;
              color: #fff;
              position: relative;

              &:before {
                content: "";
                width: 6.0625rem;
                height: 0.125rem;
                background: var(--primary);
                opacity: 1;
                display: block;
                position: absolute;
                bottom: -1rem;
                left: 0;
              }
            }
          }
        }

        .buttons {
          display: flex;
          justify-content: center;
        }

        .cs-button-solid {
          width: 15.625rem;
          height: 3.3125rem;
          margin: 0;
          padding-top: 0.1875rem;
        }
      }

      .credit {
        font-size: 1rem;
        line-height: 2.25rem;
        text-align: center;
        width: 96%;
        margin: auto;
        margin-top: 6.25rem;
        color: #fff;

        a {
          font-size: 1rem;
          text-decoration: none;
          color: #fff;

          &:hover {
            text-decoration: underline;
          }
        }

        .copyright {
          font-size: 1rem;
          display: block;
        }
      }
    }
  }
  /* Small Desktop */
  @media only screen and (min-width: 64em) {
    .footer {
      font-size: min(1.2vw, 1em);

      .container {
        width: 96%;
        max-width: 82.5rem; // (1320 / 16)
        margin: auto;
        padding: 0;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex-wrap: nowrap;
      }

      .left-section {
        text-align: left;
        width: 25.5625rem; // (409 / 16)
        margin: 0;
        align-content: center;

        .logo {
          text-align: left;
          height: 2rem;
          margin-left: 0;
          margin-bottom: 5rem;
        }

        p {
          text-align: left;
          margin-left: 0;
        }
      }

      .right-section {
        width: 100%; // (609 / 16)
        max-width: none;
        margin: 0;

        .lists {
          width: 96%;
          max-width: 48.0625rem; // (769 / 16)
          max-width: initial;
          margin: 0;

          ul {
            &:nth-of-type(3) {
              margin-top: 0;

              li:first-of-type {
                margin-bottom: 0;
              }
            }

            li {
              a {
                position: relative;

                &:before {
                  content: "";
                  width: 0%;
                  height: 0.125rem; // (2 / 16)
                  background: var(--primary);
                  opacity: 1;
                  display: block;
                  position: absolute;
                  bottom: -0.1875rem; // (-3 / 16)
                  left: 0;
                  transition: width 0.3s;
                }

                &:hover {
                  &:before {
                    width: 100%;
                  }
                }
              }
            }
          }

          .buttons {
            justify-content: flex-start;
          }
        }

        .credit {
          .copyright {
            display: inline-block;
          }
        }
      }
    }
  }

  /* Dark Mode */
  @media only screen and (min-width: 0em) {
    body.dark-mode {
      .footer {
        background: #061623;
      }
    }
  }
</style>
